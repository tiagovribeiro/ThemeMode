<?xml version="1.0" encoding="UTF-8" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Theme MODE COLOR PALETTE -->

    <!-- Background Colors -->
    <Color x:Key="ThemePrimaryBackground">#121212</Color>
    <Color x:Key="ThemeSecondaryBackground">#1E1E1E</Color>
    <Color x:Key="ThemeTertiaryBackground">#2D2D30</Color>
    <Color x:Key="ThemeCardBackground">#252526</Color>
    <Color x:Key="ThemeSurfaceBackground">#3C3C3C</Color>

    <!-- Text Colors -->
    <Color x:Key="ThemePrimaryText">#FFFFFF</Color>
    <Color x:Key="ThemeSecondaryText">#B3B3B3</Color>
    <Color x:Key="ThemeDisabledText">#6D6D6D</Color>
    <Color x:Key="ThemeHintText">#808080</Color>

    <!-- Accent Colors -->
    <Color x:Key="ThemeAccentPrimary">#0078D4</Color>
    <Color x:Key="ThemeAccentSecondary">#106EBE</Color>
    <Color x:Key="ThemeAccentHover">#1F8AD6</Color>
    <Color x:Key="ThemeAccentPressed">#0F5F9F</Color>

    <!-- Status Colors -->
    <Color x:Key="ThemeSuccess">#4CAF50</Color>
    <Color x:Key="ThemeWarning">#FF9800</Color>
    <Color x:Key="ThemeError">#F44336</Color>
    <Color x:Key="ThemeInfo">#2196F3</Color>

    <!-- Border Colors -->
    <Color x:Key="ThemeBorderPrimary">#464647</Color>
    <Color x:Key="ThemeBorderSecondary">#5A5A5C</Color>
    <Color x:Key="ThemeBorderFocus">#007ACC</Color>

    <!-- Interactive Colors -->
    <Color x:Key="ThemeHoverBackground">#383838</Color>
    <Color x:Key="ThemePressedBackground">#2A2A2A</Color>
    <Color x:Key="ThemeSelectedBackground">#094771</Color>

    <!-- Shadow Colors -->
    <Color x:Key="ThemeShadow">#000000</Color>
    <Color x:Key="ThemeShadowLight">#1A1A1A</Color>

    <!-- ================================================ -->
    <!-- PAGE STYLES -->
    <!-- ================================================ -->

    <Style TargetType="ContentPage" x:Key="ThemePageStyle">
        <Setter Property="BackgroundColor" Value="{StaticResource ThemePrimaryBackground}" />
        <Setter Property="Shell.BackgroundColor" Value="{StaticResource ThemeSecondaryBackground}" />
        <Setter Property="Shell.ForegroundColor" Value="{StaticResource ThemePrimaryText}" />
        <Setter Property="Shell.TitleColor" Value="{StaticResource ThemePrimaryText}" />
    </Style>

    <!-- ================================================ -->
    <!-- TEXT CONTROLS -->
    <!-- ================================================ -->

    <Style TargetType="Label" x:Key="ThemeLabelStyle">
        <Setter Property="TextColor" Value="{StaticResource ThemePrimaryText}" />
        <Setter Property="BackgroundColor" Value="Transparent" />
    </Style>

    <Style TargetType="Label" x:Key="ThemeLabelSecondaryStyle" BasedOn="{StaticResource ThemeLabelStyle}">
        <Setter Property="TextColor" Value="{StaticResource ThemeSecondaryText}" />
        <Setter Property="FontSize" Value="14" />
    </Style>

    <Style TargetType="Label" x:Key="ThemeLabelHintStyle" BasedOn="{StaticResource ThemeLabelStyle}">
        <Setter Property="TextColor" Value="{StaticResource ThemeHintText}" />
        <Setter Property="FontSize" Value="12" />
    </Style>

    <Style TargetType="Label" x:Key="ThemeHeaderStyle" BasedOn="{StaticResource ThemeLabelStyle}">
        <Setter Property="FontSize" Value="24" />
        <Setter Property="FontAttributes" Value="Bold" />
    </Style>

    <Style TargetType="Label" x:Key="ThemeSubHeaderStyle" BasedOn="{StaticResource ThemeLabelStyle}">
        <Setter Property="FontSize" Value="18" />
        <Setter Property="FontAttributes" Value="Bold" />
    </Style>

    <!-- ================================================ -->
    <!-- INPUT CONTROLS -->
    <!-- ================================================ -->

    <Style TargetType="Entry" x:Key="ThemeEntryStyle">
        <Setter Property="TextColor" Value="{StaticResource ThemePrimaryText}" />
        <Setter Property="BackgroundColor" Value="{StaticResource ThemeTertiaryBackground}" />
        <Setter Property="PlaceholderColor" Value="{StaticResource ThemeHintText}" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="HeightRequest" Value="44" />
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup Name="CommonStates">
                    <VisualState Name="Normal">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="{StaticResource ThemeTertiaryBackground}" />
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState Name="Focused">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="{StaticResource ThemeSurfaceBackground}" />
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState Name="Disabled">
                        <VisualState.Setters>
                            <Setter Property="TextColor" Value="{StaticResource ThemeDisabledText}" />
                            <Setter Property="BackgroundColor" Value="{StaticResource ThemeSecondaryBackground}" />
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>

    <Style TargetType="Editor" x:Key="ThemeEditorStyle">
        <Setter Property="TextColor" Value="{StaticResource ThemePrimaryText}" />
        <Setter Property="BackgroundColor" Value="{StaticResource ThemeTertiaryBackground}" />
        <Setter Property="PlaceholderColor" Value="{StaticResource ThemeHintText}" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="MinimumHeightRequest" Value="100" />
    </Style>

    <Style TargetType="SearchBar" x:Key="ThemeSearchBarStyle">
        <Setter Property="TextColor" Value="{StaticResource ThemePrimaryText}" />
        <Setter Property="BackgroundColor" Value="{StaticResource ThemeTertiaryBackground}" />
        <Setter Property="PlaceholderColor" Value="{StaticResource ThemeHintText}" />
        <Setter Property="CancelButtonColor" Value="{StaticResource ThemeSecondaryText}" />
    </Style>

    <!-- ================================================ -->
    <!-- BUTTON STYLES -->
    <!-- ================================================ -->

    <Style TargetType="Button" x:Key="ThemeButtonPrimaryStyle">
        <Setter Property="BackgroundColor" Value="{StaticResource ThemeAccentPrimary}" />
        <Setter Property="TextColor" Value="White" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="HeightRequest" Value="48" />
        <Setter Property="Padding" Value="16,0" />
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup Name="CommonStates">
                    <VisualState Name="Normal">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="{StaticResource ThemeAccentPrimary}" />
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState Name="Pressed">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="{StaticResource ThemeAccentPressed}" />
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState Name="Disabled">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="{StaticResource ThemeTertiaryBackground}" />
                            <Setter Property="TextColor" Value="{StaticResource ThemeDisabledText}" />
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>

    <Style TargetType="Button" x:Key="ThemeButtonSecondaryStyle" BasedOn="{StaticResource ThemeButtonPrimaryStyle}">
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="TextColor" Value="{StaticResource ThemeAccentPrimary}" />
        <Setter Property="BorderColor" Value="{StaticResource ThemeAccentPrimary}" />
        <Setter Property="BorderWidth" Value="2" />
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup Name="CommonStates">
                    <VisualState Name="Normal">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="Transparent" />
                            <Setter Property="TextColor" Value="{StaticResource ThemeAccentPrimary}" />
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState Name="Pressed">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="{StaticResource ThemeAccentPrimary}" />
                            <Setter Property="TextColor" Value="White" />
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>

    <Style TargetType="Button" x:Key="ThemeButtonDangerStyle" BasedOn="{StaticResource ThemeButtonPrimaryStyle}">
        <Setter Property="BackgroundColor" Value="{StaticResource ThemeError}" />
        <Setter Property="TextColor" Value="White" />
    </Style>

    <Style TargetType="Button" x:Key="ThemeButtonSuccessStyle" BasedOn="{StaticResource ThemeButtonPrimaryStyle}">
        <Setter Property="BackgroundColor" Value="{StaticResource ThemeSuccess}" />
        <Setter Property="TextColor" Value="White" />
    </Style>

    <!-- ================================================ -->
    <!-- SELECTION CONTROLS -->
    <!-- ================================================ -->

    <Style TargetType="CheckBox" x:Key="ThemeCheckBoxStyle">
        <Setter Property="Color" Value="{StaticResource ThemeAccentPrimary}" />
    </Style>

    <Style TargetType="Switch" x:Key="ThemeSwitchStyle">
        <Setter Property="OnColor" Value="{StaticResource ThemeAccentPrimary}" />
        <Setter Property="ThumbColor" Value="White" />
    </Style>

    <Style TargetType="RadioButton" x:Key="ThemeRadioButtonStyle">
        <Setter Property="TextColor" Value="{StaticResource ThemePrimaryText}" />
        <Setter Property="BackgroundColor" Value="Transparent" />
    </Style>

    <Style TargetType="Picker" x:Key="ThemePickerStyle">
        <Setter Property="TextColor" Value="{StaticResource ThemePrimaryText}" />
        <Setter Property="BackgroundColor" Value="{StaticResource ThemeTertiaryBackground}" />
        <Setter Property="TitleColor" Value="{StaticResource ThemeSecondaryText}" />
    </Style>

    <Style TargetType="DatePicker" x:Key="ThemeDatePickerStyle">
        <Setter Property="TextColor" Value="{StaticResource ThemePrimaryText}" />
        <Setter Property="BackgroundColor" Value="{StaticResource ThemeTertiaryBackground}" />
    </Style>

    <Style TargetType="TimePicker" x:Key="ThemeTimePickerStyle">
        <Setter Property="TextColor" Value="{StaticResource ThemePrimaryText}" />
        <Setter Property="BackgroundColor" Value="{StaticResource ThemeTertiaryBackground}" />
    </Style>

    <!-- ================================================ -->
    <!-- RANGE CONTROLS -->
    <!-- ================================================ -->

    <Style TargetType="Slider" x:Key="ThemeSliderStyle">
        <Setter Property="MinimumTrackColor" Value="{StaticResource ThemeAccentPrimary}" />
        <Setter Property="MaximumTrackColor" Value="{StaticResource ThemeBorderPrimary}" />
        <Setter Property="ThumbColor" Value="{StaticResource ThemeAccentPrimary}" />
    </Style>

    <Style TargetType="Stepper" x:Key="ThemeStepperStyle">
        <Setter Property="BackgroundColor" Value="{StaticResource ThemeTertiaryBackground}" />
    </Style>

    <Style TargetType="ProgressBar" x:Key="ThemeProgressBarStyle">
        <Setter Property="ProgressColor" Value="{StaticResource ThemeAccentPrimary}" />
        <Setter Property="BackgroundColor" Value="{StaticResource ThemeBorderPrimary}" />
    </Style>

    <!-- ================================================ -->
    <!-- CONTAINER CONTROLS -->
    <!-- ================================================ -->

    <Style TargetType="Frame" x:Key="ThemeFrameStyle">
        <Setter Property="BackgroundColor" Value="{StaticResource ThemeCardBackground}" />
        <Setter Property="BorderColor" Value="{StaticResource ThemeBorderPrimary}" />
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="Padding" Value="16" />
        <Setter Property="HasShadow" Value="False" />
    </Style>

    <Style TargetType="Frame" x:Key="ThemeFrameElevatedStyle" BasedOn="{StaticResource ThemeFrameStyle}">
        <Setter Property="BackgroundColor" Value="{StaticResource ThemeSurfaceBackground}" />
        <Setter Property="HasShadow" Value="True" />
    </Style>

    <Style TargetType="Border" x:Key="ThemeBorderStyle">
        <Setter Property="Stroke" Value="{StaticResource ThemeBorderPrimary}" />
        <Setter Property="StrokeThickness" Value="1" />
        <Setter Property="BackgroundColor" Value="{StaticResource ThemeCardBackground}" />
        <Setter Property="StrokeShape" Value="RoundRectangle 8" />
    </Style>

    <Style TargetType="ScrollView" x:Key="ThemeScrollViewStyle">
        <Setter Property="BackgroundColor" Value="Transparent" />
    </Style>

    <!-- ================================================ -->
    <!-- COLLECTION CONTROLS -->
    <!-- ================================================ -->

    <Style TargetType="CollectionView" x:Key="ThemeCollectionViewStyle">
        <Setter Property="BackgroundColor" Value="Transparent" />
    </Style>

    <Style TargetType="CarouselView" x:Key="ThemeCarouselViewStyle">
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="IndicatorView.IndicatorColor" Value="{StaticResource ThemeBorderPrimary}" />
        <Setter Property="IndicatorView.SelectedIndicatorColor" Value="{StaticResource ThemeAccentPrimary}" />
    </Style>

    <Style TargetType="RefreshView" x:Key="ThemeRefreshViewStyle">
        <Setter Property="RefreshColor" Value="{StaticResource ThemeAccentPrimary}" />
    </Style>

    <!-- ================================================ -->
    <!-- ACTIVITY INDICATORS -->
    <!-- ================================================ -->

    <Style TargetType="ActivityIndicator" x:Key="ThemeActivityIndicatorStyle">
        <Setter Property="Color" Value="{StaticResource ThemeAccentPrimary}" />
    </Style>

    <!-- ================================================ -->
    <!-- TABLE VIEW STYLES -->
    <!-- ================================================ -->

    <Style TargetType="TableView" x:Key="ThemeTableViewStyle">
        <Setter Property="BackgroundColor" Value="{StaticResource ThemeSecondaryBackground}" />
    </Style>

    <!-- ================================================ -->
    <!-- NAVIGATION STYLES -->
    <!-- ================================================ -->

    <Style TargetType="NavigationPage" x:Key="ThemeNavigationPageStyle">
        <Setter Property="BarBackgroundColor" Value="{StaticResource ThemeSecondaryBackground}" />
        <Setter Property="BarTextColor" Value="{StaticResource ThemePrimaryText}" />
    </Style>

    <Style TargetType="TabbedPage" x:Key="ThemeTabbedPageStyle">
        <Setter Property="BarBackgroundColor" Value="{StaticResource ThemeSecondaryBackground}" />
        <Setter Property="BarTextColor" Value="{StaticResource ThemePrimaryText}" />
        <Setter Property="SelectedTabColor" Value="{StaticResource ThemeAccentPrimary}" />
        <Setter Property="UnselectedTabColor" Value="{StaticResource ThemeSecondaryText}" />
    </Style>

    <!-- ================================================ -->
    <!-- SHELL STYLES -->
    <!-- ================================================ -->

    <Style TargetType="Shell" x:Key="ThemeShellStyle">
        <Setter Property="Shell.BackgroundColor" Value="{StaticResource ThemeSecondaryBackground}" />
        <Setter Property="Shell.ForegroundColor" Value="{StaticResource ThemePrimaryText}" />
        <Setter Property="Shell.TitleColor" Value="{StaticResource ThemePrimaryText}" />
        <Setter Property="Shell.DisabledColor" Value="{StaticResource ThemeDisabledText}" />
        <Setter Property="Shell.UnselectedColor" Value="{StaticResource ThemeSecondaryText}" />
        <Setter Property="Shell.TabBarBackgroundColor" Value="{StaticResource ThemeSecondaryBackground}" />
        <Setter Property="Shell.TabBarForegroundColor" Value="{StaticResource ThemePrimaryText}" />
        <Setter Property="Shell.TabBarTitleColor" Value="{StaticResource ThemePrimaryText}" />
        <Setter Property="Shell.TabBarUnselectedColor" Value="{StaticResource ThemeSecondaryText}" />
    </Style>

    <!-- ================================================ -->
    <!-- UTILITY STYLES -->
    <!-- ================================================ -->

    <!-- Card Style for content grouping -->
    <Style TargetType="Frame" x:Key="ThemeCardStyle" BasedOn="{StaticResource ThemeFrameStyle}">
        <Setter Property="Margin" Value="16,8" />
        <Setter Property="Padding" Value="20" />
        <Setter Property="CornerRadius" Value="16" />
    </Style>

    <!-- List Item Style -->
    <Style TargetType="Grid" x:Key="ThemeListItemStyle">
        <Setter Property="BackgroundColor" Value="{StaticResource ThemeCardBackground}" />
        <Setter Property="Padding" Value="16,12" />
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup Name="CommonStates">
                    <VisualState Name="Normal">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="{StaticResource ThemeCardBackground}" />
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState Name="Selected">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="{StaticResource ThemeSelectedBackground}" />
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>

    <!-- Icon Button Style -->
    <Style TargetType="Button" x:Key="ThemeIconButtonStyle">
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="TextColor" Value="{StaticResource ThemeSecondaryText}" />
        <Setter Property="BorderWidth" Value="0" />
        <Setter Property="FontSize" Value="18" />
        <Setter Property="CornerRadius" Value="25" />
        <Setter Property="HeightRequest" Value="50" />
        <Setter Property="WidthRequest" Value="50" />
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup Name="CommonStates">
                    <VisualState Name="Pressed">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="{StaticResource ThemeHoverBackground}" />
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>

</ResourceDictionary>