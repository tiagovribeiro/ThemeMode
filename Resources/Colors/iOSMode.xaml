<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ThemeMode.Resources.Colors.iOSMode">

    <!-- ========================
   iOS Brand Theme Palette
   ======================== -->
    
    <!-- Core Brand / Accent Colors -->
    <Color x:Key="Primary">#007AFF</Color>
    <Color x:Key="PrimaryDark">#5856D6</Color>
    <Color x:Key="PrimaryLight">#5AC8FA</Color>
    <Color x:Key="Secondary">#FF2D55</Color>

    <!-- Text Colors -->
    <Color x:Key="TextPrimary">#000000</Color>
    <Color x:Key="TextSecondary">#8E8E93</Color>
    <Color x:Key="TextTertiary">#C7C7CC</Color>
    <Color x:Key="TextDisabled">#C7C7CC</Color>

    <!-- Background Colors -->
    <Color x:Key="BackgroundPrimary">#FFFFFF</Color>
    <Color x:Key="BackgroundSecondary">#F2F2F7</Color>
    <Color x:Key="BackgroundTertiary">#FFFFFF</Color>
    <Color x:Key="BackgroundSurface">#F9F9F9</Color>

    <!-- Interactive States -->
    <Color x:Key="Hover">#0051D5</Color>
    <Color x:Key="Pressed">#004CCC</Color>
    <Color x:Key="Selected">#E3F2FD</Color>

    <!-- Basic Colors -->
    <Color x:Key="White">#FFFFFF</Color>
    <Color x:Key="Black">#000000</Color>
    <Color x:Key="OffBlack">#1C1B1F</Color>

    <!-- Status Colors -->
    <Color x:Key="Success">#4CD964</Color>
    <Color x:Key="Warning">#FF9500</Color>
    <Color x:Key="Error">#FF3B30</Color>
    <Color x:Key="Info">#FFCC00</Color>

    <!-- Borders & Separators -->
    <Color x:Key="BorderPrimary">#C6C6C8</Color>
    <Color x:Key="BorderSecondary">#D1D1D6</Color>
    <Color x:Key="BorderFocus">#007AFF</Color>
    <Color x:Key="Separator">#C6C6C8</Color>

    <!-- Shadows -->
    <Color x:Key="Shadow">#00000010</Color>
    <Color x:Key="ShadowLight">#00000008</Color>

</ResourceDictionary>