<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ThemeMode.Resources.Colors.LightMode">
    <!-- ========================
   Light Mode Theme Palette
   ======================== -->

    <!-- Core Brand / Accent Colors -->
    <Color x:Key="Primary">#66A8FF</Color>
    <!-- Soft Sky Blue Accent -->
    <Color x:Key="PrimaryDark">#3385FF</Color>
    <!-- Brighter Blue -->
    <Color x:Key="PrimaryLight">#99C6FF</Color>
    <!-- Lighter Blue -->
    <Color x:Key="Secondary">#FF8080</Color>
    <!-- Coral Accent -->
    
    <!-- Text Colors -->
    <Color x:Key="TextPrimary">#1A1A1A</Color>
    <!-- Rich Black -->
    <Color x:Key="TextSecondary">#4D4D4D</Color>
    <!-- Dark Grey -->
    <Color x:Key="TextTertiary">#7A7A7A</Color>
    <!-- Medium Grey -->
    <Color x:Key="TextDisabled">#B3B3B3</Color>
    <!-- Light Grey -->

    <!-- Background Colors -->
    <Color x:Key="BackgroundPrimary">#FFFFFF</Color>
    <!-- Pure White -->
    <Color x:Key="BackgroundSecondary">#F7F9FC</Color>
    <!-- Soft Cool White -->
    <Color x:Key="BackgroundTertiary">#EFF3F9</Color>
    <!-- Blue-Tinted White -->
    <Color x:Key="BackgroundSurface">#FAFAFA</Color>
    <!-- Neutral Off-White -->

    <!-- Interactive States -->
    <Color x:Key="Hover">#E6F0FF</Color>
    <!-- Pale Blue Hover -->
    <Color x:Key="Pressed">#CCE0FF</Color>
    <!-- Soft Blue Press -->
    <Color x:Key="Selected">#FFEBEB</Color>
    <!-- Light Coral Select -->

    <!-- Borders & Separators -->
    <Color x:Key="BorderPrimary">#D9D9D9</Color>
    <Color x:Key="BorderSecondary">#E6E6E6</Color>
    <Color x:Key="BorderFocus">#0066FF</Color>
    <Color x:Key="Separator">#F0F0F0</Color>

    <!-- Shadows -->
    <Color x:Key="Shadow">#00000020</Color>
    <!-- Light Subtle Shadow -->
    <Color x:Key="ShadowLight">#00000010</Color>

</ResourceDictionary>